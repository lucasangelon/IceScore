<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".otherSettings"
    android:background="#ff000000">

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Edit Game Log"
        android:id="@+id/editGameLogBtn"
        android:textSize="25dp"
        android:layout_below="@+id/otherSettingsLbl"
        android:layout_alignLeft="@+id/otherSettingsLbl"
        android:layout_alignStart="@+id/otherSettingsLbl"
        android:layout_marginLeft="159dp"
        android:layout_marginStart="159dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Change Goalie"
        android:id="@+id/changeGoalieBtn"
        android:textSize="25dp"
        android:layout_below="@+id/otherSettingsLbl"
        android:layout_toLeftOf="@+id/cancelGameBtn"
        android:layout_toStartOf="@+id/cancelGameBtn" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Cancel Game"
        android:id="@+id/cancelGameBtn"
        android:textColor="#ffff0020"
        android:textSize="25dp"
        android:layout_alignTop="@+id/injuriesBtn"
        android:layout_alignLeft="@+id/editGameLogBtn"
        android:layout_alignStart="@+id/editGameLogBtn" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Injuries"
        android:id="@+id/injuriesBtn"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/cancelGameBtn"
        android:layout_toStartOf="@+id/cancelGameBtn" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Other Settings"
        android:id="@+id/otherSettingsLbl"
        android:textSize="@dimen/abc_text_size_display_4_material"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
