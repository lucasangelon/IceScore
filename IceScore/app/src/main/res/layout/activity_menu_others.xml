<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".otherSettings"
    android:background="#ff000000">

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Edit Team"
        android:id="@+id/editTeamBtn"
        android:layout_marginLeft="255dp"
        android:layout_marginStart="255dp"
        android:textSize="25dp"
        android:layout_above="@+id/editOfficialsClockBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Edit Game Log"
        android:id="@+id/editGameLogBtn"
        android:layout_above="@+id/changeGoalieBtn"
        android:layout_alignLeft="@+id/changeGoalieBtn"
        android:layout_alignStart="@+id/changeGoalieBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Edit Officials / Clock"
        android:id="@+id/editOfficialsClockBtn"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editTeamBtn"
        android:layout_alignStart="@+id/editTeamBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Change Goalie"
        android:id="@+id/changeGoalieBtn"
        android:layout_above="@+id/injuriesBtn"
        android:layout_alignLeft="@+id/injuriesBtn"
        android:layout_alignStart="@+id/injuriesBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Cancel Game"
        android:id="@+id/cancelGameBtn"
        android:textColor="#ffff0020"
        android:layout_below="@+id/editOfficialsClockBtn"
        android:layout_alignLeft="@+id/editOfficialsClockBtn"
        android:layout_alignStart="@+id/editOfficialsClockBtn"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Injuries"
        android:id="@+id/injuriesBtn"
        android:layout_marginLeft="115dp"
        android:layout_marginStart="115dp"
        android:layout_below="@+id/editOfficialsClockBtn"
        android:layout_toRightOf="@+id/editOfficialsClockBtn"
        android:layout_toEndOf="@+id/editOfficialsClockBtn"
        android:textSize="25dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Other Settings"
        android:id="@+id/otherSettingsLbl"
        android:layout_alignParentTop="true"
        android:layout_marginTop="47dp"
        android:textSize="@dimen/abc_text_size_display_4_material"
        android:textColor="#ffffffff"
        android:layout_alignLeft="@+id/editTeamBtn"
        android:layout_alignStart="@+id/editTeamBtn"
        android:layout_above="@+id/editTeamBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
