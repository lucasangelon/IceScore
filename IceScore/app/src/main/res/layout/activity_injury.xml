<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddInjuriesScreen"
    android:background="#000000">

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Team A"
        android:id="@+id/button"
        android:layout_marginStart="90dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Team B"
        android:id="@+id/button2"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Injury description"
        android:id="@+id/textView"
        android:layout_marginTop="72dp"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:text="Injury"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="6"
        android:id="@+id/textView2"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Joe Blog"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_above="@+id/timePicker"
        android:layout_alignRight="@+id/timePicker"
        android:layout_alignEnd="@+id/timePicker" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="43dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Back"
        android:id="@+id/button3"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/timePicker"
        android:layout_alignLeft="@+id/timePicker"
        android:layout_alignStart="@+id/timePicker" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Confirm"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <!--<fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="notsingsing.addinjury.PlayerListFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_player_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />-->

</RelativeLayout>