<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddInjuriesScreen"
    android:background="#000000"
    android:id="@+id/container">

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Team A"
        android:id="@+id/teamA"
        android:layout_marginStart="90dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Team B"
        android:id="@+id/teamB"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="66dp"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Injury description"
        android:id="@+id/textView"
        android:layout_marginTop="72dp"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_below="@+id/teamA"
        android:layout_alignLeft="@+id/teamA"
        android:layout_alignStart="@+id/teamA" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descText"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:text="Injury"
        android:layout_alignTop="@+id/textView"
        android:layout_alignLeft="@+id/teamB"
        android:layout_alignStart="@+id/teamB" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="6"
        android:id="@+id/PlayerNum"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:enabled="true" />



    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Back"
        android:id="@+id/button3"
        android:layout_below="@+id/listView4"
        android:layout_alignLeft="@+id/listView4"
        android:layout_alignStart="@+id/listView4"
        android:layout_marginTop="93dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="Confirm"
        android:id="@+id/button_confirm"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/descText"
        android:layout_alignStart="@+id/descText" />

    <ListView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/listView4"
        android:layout_below="@+id/PlayerNum"
        android:layout_alignLeft="@+id/PlayerNum"
        android:layout_alignStart="@+id/PlayerNum" />

    <ListView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/listView5"
        android:layout_alignTop="@+id/listView4"
        android:layout_toRightOf="@+id/listView4"
        android:layout_toEndOf="@+id/listView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Joe blog"
        android:id="@+id/Player_name"
        android:textColor="#FFFFFF"
        android:textSize="36dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <!--<fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="notsingsing.addinjury.PlayerListFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_player_list_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true" />-->

</RelativeLayout>