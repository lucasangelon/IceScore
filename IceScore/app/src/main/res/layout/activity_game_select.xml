<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/mainView"
    android:nestedScrollingEnabled="true">

    <TextView android:text="Choose By Date" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChooseByDate"
        android:textSize="30dp"
        android:layout_below="@+id/txtSelGm"
        android:layout_toStartOf="@+id/txtSelGm" />

    <TextView
        android:text="Choose By Team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChoByTm"
        android:textSize="30dp"
        android:layout_above="@+id/gameDatePicker"
        android:layout_toEndOf="@+id/txtSelGm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Game"
        android:id="@+id/txtSelGm"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameDatePicker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layoutMode="clipBounds"
        android:measureAllChildren="true"
        android:spinnersShown="true"
        android:importantForAccessibility="auto"
        android:layout_below="@+id/txtChooseByDate"
        android:layout_alignStart="@+id/txtChooseByDate" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/gameDatePicker"
