                android:layout_height="70dp"
                android:text="VENUE"
                android:id="@+id/textView3"
                android:textSize="40dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:padding="5dp" />

            <TextView
