<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hockey.icescore.charizard.ice_score.gameResults"
    android:background="#ff000000">

    <TextView
        android:text="Game Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:id="@+id/textView" />

    <ListView
        android:layout_width="750dp"
        android:layout_height="300dp"
        android:id="@+id/gameResultsListView"
        android:visibility="visible"
        android:background="#ffffffff"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Referee"
        android:id="@+id/refSignButton"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnTeamASign"
        android:layout_toStartOf="@+id/btnTeamASign" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Team A Sign"
        android:id="@+id/btnTeamASign"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Team B Sign"
        android:id="@+id/btnTeamBSign"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="End Game"
        android:id="@+id/endGameBtn"
        android:textSize="40dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnTeamBSign"
        android:layout_toEndOf="@+id/btnTeamBSign" />

</RelativeLayout>