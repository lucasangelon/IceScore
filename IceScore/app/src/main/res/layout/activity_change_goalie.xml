<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mainlayout">

    <TextView android:text="Change Golie" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtChgGl"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="HOME"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:layout_below="@+id/txtChgGl"
        android:layout_alignStart="@+id/button2"
        android:layout_alignLeft="@+id/button2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AWAY"
        android:id="@+id/textView2"
        android:textSize="40dp"
        android:layout_marginLeft="77dp"
        android:layout_marginStart="78dp"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/txtChgGl"
        android:layout_toRightOf="@+id/txtChgGl"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:id="@+id/button2"
        android:layout_marginRight="123dp"
        android:layout_marginEnd="123dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/txtChgGl"
        android:layout_toStartOf="@+id/txtChgGl" />

    <ListView
        android:layout_width="550dp"
        android:layout_height="450dp"
        android:id="@+id/listView2"
        android:entries="@array/teamA"
        android:background="@drawable/border"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"/>

    <ListView
        android:layout_width="550dp"
        android:layout_height="450dp"
        android:id="@+id/listView"
        android:entries="@array/teamB"
        android:background="@drawable/border"
        android:layout_alignTop="@+id/listView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:choiceMode="singleChoice"
        android:listSelector="#666666"/>

</RelativeLayout>