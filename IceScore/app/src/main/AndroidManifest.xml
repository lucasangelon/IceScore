<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hockey.icescore" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".views.MenuMain" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.Game">
        </activity>

        <activity
            android:name=".views.SetupTeam"
            android:label="Setup Team"
            android:parentActivityName=".views.GameSelect">
        </activity>

        <activity
            android:name=".views.Confirmation"
            android:label="Sign Off / Confirm Game"
            android:parentActivityName=".views.SetupTeam">
        </activity>

        <activity
            android:name=".views.MenuOthers"
            android:parentActivityName=".views.Game">
        </activity>

        <activity
            android:name=".views.Result">
        </activity>

        <activity
            android:name=".views.ChangeGoalie">
        </activity>

        <activity
            android:name=".views.GameLog">
        </activity>
        
        <activity
            android:name=".views.GameSelect"
            android:parentActivityName="views.MenuMain">
        </activity>

    </application>
</manifest>
