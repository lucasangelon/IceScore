<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hockey.icescore" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.Splash"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuMain"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.Game" >
        </activity>
        <activity
            android:name=".activities.SetupTeam"
            android:label="Setup Team"
            android:parentActivityName=".activities.GameSelect" >
        </activity>
        <activity
            android:name=".activities.Confirmation"
            android:label="Sign Off / Confirm Game"
            android:parentActivityName=".activities.SetupTeam" >
        </activity>
        <activity
            android:name=".activities.MenuOthers"
            android:parentActivityName=".activities.Game" >
        </activity>
        <activity android:name=".activities.Result" >
        </activity>
        <activity android:name=".activities.ChangeGoalie" >
        </activity>
        <activity android:name=".activities.GameLog" >
        </activity>
        <activity android:name=".activities.Injury" >
        </activity>
        <activity
            android:name=".activities.GameSelect"
            android:parentActivityName="activities.MenuMain" >
        </activity>
        <activity android:name=".activities.AddTeam"
            android:label="Add Team">

        </activity>
        <fragment android:name=".fragments.PlayerList" >
        </fragment>
        <activity
            android:name=".activities.Penalty"
            android:label="@string/title_activity_penalty" >
        </activity>
        <activity
            android:name=".activities.CaptureSignature"
            android:label="@string/title_activity_capture_signature" >
        </activity>
        <activity
            android:name=".activities.About"
            android:label="k" >
        </activity>
    </application>

</manifest>
